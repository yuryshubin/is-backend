{
   "compilerOptions": {
      "target": "ES2017",
      "module": "CommonJS",
      "moduleResolution": "node",
      "lib": ["ES2017", "dom"],
      "sourceMap": true,
      "esModuleInterop": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitThis": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "noImplicitReturns": true,
      "removeComments": true
   },
   "exclude": ["node_modules/**/*", ".serverless/**/*", ".webpack/**/*"]
}
